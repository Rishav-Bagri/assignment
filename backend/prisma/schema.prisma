generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Mode {
  formative
  summative
}

enum QuestionType {
  mcq
  ordering
  hotspot
}


model Assessment {
  assessmentId        String        @id @default(uuid())
  title     String
  mode      Mode       // formative | summative
  createdAt DateTime   @default(now())

  questions AssessmentQuestion[]
}

model AssessmentQuestion {
  id                String           @id @default(uuid())
  assessmentId      String
  questionType      QuestionType

  stem              String
  marks             Int           @default(1)

  difficulty        String?
  bloomsLevel       String?
  learningObjective String?

  assessment        Assessment    @relation(fields: [assessmentId], references: [assessmentId], onDelete: Cascade)

  mcq               McqQuestion?
  ordering          OrderingQuestion?
  hotspot           HotspotQuestion?

  createdAt         DateTime      @default(now())
}

model McqQuestion {
  questionId String @id
  question   AssessmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  options    Json
}
model OrderingQuestion {
  questionId String @id
  question   AssessmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  items        Json
  correctOrder Json
  feedback     String?
}
model HotspotQuestion {
  questionId String @id
  question   AssessmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  imageUrl          String
  zones             Json
  correctFeedback   String?
  incorrectFeedback String?
}

